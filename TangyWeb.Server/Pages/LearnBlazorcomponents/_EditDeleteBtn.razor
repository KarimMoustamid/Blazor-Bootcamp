
@if(IsActive)
{
    <input type="button" class="py-2 px-4 bg-red-700 border-0 rounded-md text-white shadow-xl hover-bg-red-600 transition-all duration-300" value="Delete" />
    <input type="button" class="py-2 px-4 bg-green-700 border-0 rounded-md text-white shadow-xl hover-bg-green-600 transition-all duration-300" value="Edit" />
